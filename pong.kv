#:kivy 1.9.0
#:import Factory kivy.factory.Factory


<PongBall>:
    size_hint: .14,.09
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size_hint: .3, .6
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PongGame>:
    ball: pong_ball
#    player1: player_left
#    player2: player_right
    sm: sm
    
    on_touch_down: print(self.ball.pos)
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 7, self.height
        
    ScreenManager:
        id: sm
        size:root.size
        transition: Factory.get('WipeTransition')()
        Screen:
            name:'Start'
            size_hint:.5,.2
            pos_hint:{'center_x':.5,'center_y':.5}
            Button:
                text:'Start to play'
                on_release:sm.current='GameScreen'
                font_size:50
                
        Screen:
            size_hint:None,None
            pos_hint:{'center_x':.5,'center_y':.5}
            name:'GameScreen'
            BoxLayout:
                Label:
                    font_size: 70  
                    center_x: root.width / 4
                    top: root.top - 50
#                    text: str(root.player1.score)
                    
                Label:
                    font_size: 70  
                    center_x: root.width * 3 / 4
                    top: root.top - 50
#                    text: str(root.player2.score)
#                
                PongBall:
                    id: pong_ball
                    center: self.parent.center
